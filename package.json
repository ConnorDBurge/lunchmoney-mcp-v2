  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ConnorDBurge/lunchmoney-mcp-v2.git"
  },
  "homepage": "https://github.com/ConnorDBurge/lunchmoney-mcp-v2#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@lunch-money/lunch-money-js-v2": "^2.8.5",
    "@modelcontextprotocol/sdk": "^1.17.0",
    "zod": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^24.1.0",
    "typescript": "^5.8.3",
    "vitest": "^3.1.0"

{
  "name": "lunchmoney-mcp-v2",
  "version": "1.0.0",
  "description": "MCP server for Lunch Money, powered by the v2 TypeScript client",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "lunchmoney-mcp-v2": "./build/index.js"
  },
  "scripts": {
